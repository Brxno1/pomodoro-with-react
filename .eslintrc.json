{
  "extends": [
    "@rocketseat/eslint-config/react"
  ],
  "plugins": [
    "simple-import-sort"
  ],
  "rules": {
    "@typescript-eslint/no-empty-object-type": "off",
    "@typescript-eslint/no-unused-vars": "warn",
    "@typescript-eslint/no-explicit-any": "warn",
    "simple-import-sort/imports": "warn",
    "prettier/prettier": [
      "error",
      {
        "printWidth": 95,
        "tabWidth": 2,
        "singleQuote": true,
        "trailingComma": "all",
        "arrowParens": "always",
        "semi": false,
        "endOfLine": "auto"
      }
    ]
  }
}